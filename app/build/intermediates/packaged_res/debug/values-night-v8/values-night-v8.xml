<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="colorAccent">#FFDE67</color>
    <color name="colorCardView">#FFF5D0</color>
    <color name="colorCardViewTransparent">#80CAC5AF</color>
    <color name="colorPrimary">#F4F4F4</color>
    <color name="colorPrimaryDark">#161c24</color>
    <color name="colorPrimaryLight">#eeeeee</color>
    <color name="colorPrimaryVariant">#D0B555</color>
    <color name="colorPrimaryVariantTransparent">#80AAA27B</color>
    <color name="colorProfileText">#9F987F</color>
    <color name="colorSecondaryText">#5F542A</color>
    <color name="colorToolbar">#37311B</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <style name="Theme.CVGenius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">@color/colorAccent</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.CVGenius.TransparentStatusBar" parent="Theme.CVGenius">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        

    </style>
    <style name="Theme.CVGeniusSplash" parent="SameThemeDarkLight">
        <item name="android:windowBackground">@drawable/splash_logo_with_background</item>
    </style>
</resources>