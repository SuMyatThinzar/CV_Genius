<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".presentation.details.signature.SignatureActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorAccent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/app_name"
            app:titleTextColor="@color/colorToolbar"
            app:titleCentered="true"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/width_back_btn"
            android:layout_height="@dimen/height_back_btn"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_medium_3"
            android:background="@drawable/background_back"
            android:elevation="1dp"
            android:padding="@dimen/margin_card_medium"
            android:src="@drawable/ic_back" />

    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_half_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/lbl_signature"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_3"
                android:layout_marginEnd="@dimen/margin_medium_3"
                android:layout_marginBottom="@dimen/margin_medium_3"
                app:cardCornerRadius="@dimen/margin_medium_2"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailNameExpanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:background="@color/colorCardView"
                    android:text="@string/lbl_signature"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_regular_2x"
                    android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="@dimen/margin_medium_2"
                        android:padding="2dp"
                        android:background="@drawable/background_edit_text" >

                        <com.smtz.cvgenius.common.components.DrawingView
                            android:id="@+id/drawing_view"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <soup.neumorphism.NeumorphButton
                            style="@style/Widget.Neumorph.Button"
                            app:neumorph_shapeType="flat"
                            app:neumorph_shapeAppearance="@style/CustomShapeAppearanceTextButton"
                            app:neumorph_backgroundColor="@color/colorPrimary"
                            app:neumorph_shadowColorLight="#FFFDF4"
                            app:neumorph_insetTop="8dp"
                            android:id="@+id/btnClear"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_button"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="@dimen/margin_medium_2"
                            android:text="@string/lbl_clear"
                            android:textAllCaps="false"
                            android:textColor="@color/colorSecondaryText"/>

                        <soup.neumorphism.NeumorphButton
                            style="@style/Widget.Neumorph.Button"
                            app:neumorph_shapeType="flat"
                            app:neumorph_shapeAppearance="@style/CustomShapeAppearanceTextButton"
                            app:neumorph_backgroundColor="@color/colorAccent"
                            app:neumorph_shadowColorLight="#FFFDF4"
                            app:neumorph_insetTop="8dp"
                            android:id="@+id/btnSave"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_button"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="@dimen/margin_medium_2"
                            android:text="@string/lbl_save"
                            android:textAllCaps="false"
                            android:textColor="@color/colorSecondaryText"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</LinearLayout>