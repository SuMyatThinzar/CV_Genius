<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".CVGeniusApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_cv_genius"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/SameThemeDarkLight"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ChangeTemplateActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.preview.PreviewActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.details.signature.SignatureActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".presentation.details.objectives.ObjectiveActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".presentation.details.achievements.AchievementActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".presentation.details.skills.SkillActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".presentation.details.workExperiences.WorkExperienceActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".presentation.details.projectDetails.ProjectDetailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".presentation.details.educationDetails.EducationDetailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".presentation.details.personalDetails.PersonalDetailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".presentation.details.reference.ReferenceActivity"
            android:exported="false"/>

        <activity
            android:name=".presentation.createcv.CreateCvActivity"
            android:exported="true"/>

        <activity
            android:name=".presentation.template.SampleTemplateActivity"
            android:exported="true"/>

        <activity
            android:name=".presentation.home.HomeActivity"
            android:exported="true">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>

        <activity
            android:name=".presentation.splash.IntroActivity"
            android:exported="true"
            android:theme="@style/Theme.CVGeniusSplash">

             <intent-filter>
             <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- For cache file saving -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.smtz.cvgenius.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>

        <!-- For Crop Image -->
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/> <!-- optional (needed if default theme has no action bar) -->

    </application>

</manifest>