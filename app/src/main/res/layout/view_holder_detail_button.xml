<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_medium_2"
    android:layout_marginBottom="@dimen/margin_medium_3"
    android:padding="@dimen/margin_card_medium"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_medium">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDetailImage"
            android:layout_width="@dimen/size_drawer_icon"
            android:layout_height="@dimen/size_drawer_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_detail_button"
            app:srcCompat="@drawable/ic_profile_create" />

        <TextView
            android:id="@+id/tvDetailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_card_medium_2"
            android:layout_marginBottom="@dimen/margin_detail_button"
            android:text="Personal Details"
            android:textColor="@color/colorProfileText"
            android:textSize="@dimen/text_small" />

    </LinearLayout>

</androidx.cardview.widget.CardView>