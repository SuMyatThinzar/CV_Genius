<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorCardView"
    tools:context=".presentation.preview.PreviewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/btnDownload"
                        style="@style/Widget.Neumorph.ImageButton"
                        app:neumorph_shapeAppearance="@style/CustomShapeAppearanceImageButton"
                        app:neumorph_backgroundColor="@color/colorAccent"
                        app:neumorph_shadowColorLight="#FFFCF1"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_download" />

                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="Download"
                        android:textColor="@color/colorSecondaryText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:gravity="center_horizontal">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/btnSend"
                        style="@style/Widget.Neumorph.ImageButton"
                        app:neumorph_shapeAppearance="@style/CustomShapeAppearanceImageButton"
                        app:neumorph_backgroundColor="@color/colorAccent"
                        app:neumorph_shadowColorLight="#FFFCF1"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_send" />

                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="Send"
                        android:textColor="@color/colorSecondaryText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/btnPrint"
                        style="@style/Widget.Neumorph.ImageButton"
                        app:neumorph_shapeAppearance="@style/CustomShapeAppearanceImageButton"
                        app:neumorph_backgroundColor="@color/colorAccent"
                        app:neumorph_shadowColorLight="#FFFCF1"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_print" />

                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="Print"
                        android:textColor="@color/colorSecondaryText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/btnShare"
                        style="@style/Widget.Neumorph.ImageButton"
                        app:neumorph_shapeAppearance="@style/CustomShapeAppearanceImageButton"
                        app:neumorph_backgroundColor="@color/colorAccent"
                        app:neumorph_shadowColorLight="#FFFCF1"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_share" />

                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="Share"
                        android:textColor="@color/colorSecondaryText"/>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/flPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewFirst"
                    android:layout_width="353.5dp"
                    android:layout_height="499.79dp"
                    android:elevation="@dimen/margin_card_medium_2"
                    app:cardCornerRadius="@dimen/margin_card_medium"
                    android:layout_margin="@dimen/margin_medium_2"
                    android:visibility="gone">

                    <include
                        android:id="@+id/vpResumeFreeOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/view_pod_zresume_free_one"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSecondOne"
                    android:layout_width="353.5dp"
                    android:layout_height="499.79dp"
                    android:elevation="@dimen/margin_card_medium_2"
                    app:cardCornerRadius="@dimen/margin_card_medium"
                    android:layout_margin="@dimen/margin_medium_2"
                    android:visibility="gone">

                    <include
                        android:id="@+id/vpResumeSecondOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/view_pod_zresume_second_one"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSecondTwo"
                    android:layout_width="353.5dp"
                    android:layout_height="499.79dp"
                    android:elevation="@dimen/margin_card_medium_2"
                    app:cardCornerRadius="@dimen/margin_card_medium"
                    android:layout_margin="@dimen/margin_medium_2"
                    android:visibility="gone">

                    <include
                        android:id="@+id/vpResumeSecondTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/view_pod_zresume_second_two"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSecondThree"
                    android:layout_width="353.5dp"
                    android:layout_height="499.79dp"
                    android:elevation="@dimen/margin_card_medium_2"
                    app:cardCornerRadius="@dimen/margin_card_medium"
                    android:layout_margin="@dimen/margin_medium_2"
                    android:visibility="gone">

                    <include
                        android:id="@+id/vpResumeSecondThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/view_pod_zresume_second_three"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <soup.neumorphism.NeumorphButton
                style="@style/Widget.Neumorph.Button"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearanceTextButton"
                app:neumorph_shadowColorLight="#FFFBEB"
                app:neumorph_backgroundColor="@color/colorAccent"
                app:neumorph_shadowElevation="3dp"
                android:id="@+id/btnChangeTemplate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginBottom="@dimen/margin_xxxlarge"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/background_upload_photo"
                android:text="@string/lbl_change_template"
                android:textAllCaps="false"
                android:textColor="@color/colorSecondaryText" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bannerAdView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/margin_xlarge_n"
        android:elevation="1dp"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_banner_id" />

    <View
        android:id="@+id/darkenBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryVariantTransparent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvPleaseWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Loading the file. Please wait..."
        android:textColor="@color/colorToolbar"
        android:textStyle="bold"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:elevation="1dp"
        android:visibility="gone"/>

</RelativeLayout>