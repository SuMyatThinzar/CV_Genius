<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".presentation.details.objectives.ObjectiveActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_detail_toolbar"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/width_back_btn"
            android:layout_height="@dimen/height_back_btn"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_medium_3"
            android:background="@drawable/background_back"
            android:elevation="1dp"
            android:padding="@dimen/margin_card_medium"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:text="@string/lbl_create_my_cv"
            android:textColor="@color/colorToolbar"
            android:textSize="@dimen/text_heading_1x"
            android:textStyle="bold" />

    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_medium_2_n"
            android:background="@drawable/background_half_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/lbl_objective"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_3"
                android:layout_marginEnd="@dimen/margin_medium_3"
                android:layout_marginBottom="@dimen/margin_medium_3"
                app:cardCornerRadius="@dimen/margin_medium_2"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDetailNameExpanded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_medium_3"
                        android:background="@color/colorCardView"
                        android:text="@string/lbl_objective"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_regular_2x"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etObjective"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="@dimen/margin_medium_2"
                        android:maxLines="50"
                        android:background="@drawable/background_edit_text"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnClear"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_button"
                            android:background="@drawable/background_remove"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            android:text="@string/lbl_clear"
                            android:textAllCaps="false"
                            android:textColor="@color/colorSecondaryText" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSave"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_button"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin_large"
                            android:background="@drawable/background_upload_photo"
                            android:paddingStart="@dimen/margin_medium_3"
                            android:paddingEnd="@dimen/margin_medium_3"
                            android:text="@string/lbl_save"
                            android:textAllCaps="false"
                            android:textColor="@color/colorSecondaryText" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</LinearLayout>