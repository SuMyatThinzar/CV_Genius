<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
    
    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        app:neumorph_shapeType="flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewProfile"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginBottom="@dimen/margin_card_medium_2"
                    android:layout_marginStart="@dimen/margin_card_medium_2"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_select_photo"
                        android:background="@drawable/background_select_photo"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginEnd="@dimen/margin_medium_3"
                    android:layout_toEndOf="@id/cardViewProfile"
                    android:text="Su Myat Thinzar"
                    android:textColor="@color/colorSecondaryText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvUserName"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium_3"
                    android:layout_toEndOf="@id/cardViewProfile"
                    android:text="sumyat@gmail.com"
                    android:textColor="@color/colorSecondaryText" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvEmail"
                    android:layout_marginEnd="@dimen/margin_medium_3"
                    android:layout_toEndOf="@id/cardViewProfile"
                    android:text="14 April 2023"
                    android:textColor="@color/colorSecondaryText" />

                <ImageView
                    android:id="@+id/btnOptions"
                    android:layout_width="@dimen/size_drawer_icon"
                    android:layout_height="@dimen/size_drawer_icon"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/baseline_more_24dp_secondary_text" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlTop"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnEditCv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryText"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/size_drawer_icon"
                        android:layout_height="@dimen/size_drawer_icon"
                        android:src="@drawable/baseline_edit_24dp_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="@string/lbl_edit_my_cv"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnViewCv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/size_drawer_icon"
                        android:layout_height="@dimen/size_drawer_icon"
                        android:src="@drawable/ic_view" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="@string/lbl_view_my_cv"
                        android:textColor="@color/colorSecondaryText" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </soup.neumorphism.NeumorphCardView>

</FrameLayout>