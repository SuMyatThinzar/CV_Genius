<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SameThemeDarkLight" parent="Theme.CVGenius.TransparentStatusBar">
        <!-- Disable automatic color adaptation -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--  Spinner drop down color  -->
<!--    <style name="MySpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">-->
<!--        <item name="android:textColor">@color/colorProfileText</item>-->
<!--        <item name="android:textSize">16sp</item>-->
<!--    </style>-->

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Dialog button color -->
    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorSecondaryText</item>
        <item name="colorOnPrimary">@color/colorSecondaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <!--  Neumorphism Card View under toolbar  -->
    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>

        <!-- Or if wants different radius depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">@dimen/margin_xlarge</item>
        <item name="neumorph_cornerSizeTopRight">@dimen/margin_xlarge</item>
        <item name="neumorph_cornerSizeBottomLeft">@dimen/margin_xlarge</item>
        <item name="neumorph_cornerSizeBottomRight">@dimen/margin_xlarge</item>
    </style>

    <!--  Neumorphism Image Button corner  -->
    <style name="CustomShapeAppearanceImageButton">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>

        <!-- Or if wants different radius depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">@dimen/margin_small</item>
        <item name="neumorph_cornerSizeTopRight">@dimen/margin_small</item>
        <item name="neumorph_cornerSizeBottomLeft">@dimen/margin_small</item>
        <item name="neumorph_cornerSizeBottomRight">@dimen/margin_small</item>
    </style>

    <!--  Neumorphism Text Button corner  -->
    <style name="CustomShapeAppearanceTextButton">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>

        <!-- Or if wants different radius depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">@dimen/margin_medium</item>
        <item name="neumorph_cornerSizeTopRight">@dimen/margin_medium</item>
        <item name="neumorph_cornerSizeBottomLeft">@dimen/margin_medium</item>
        <item name="neumorph_cornerSizeBottomRight">@dimen/margin_medium</item>
    </style>

    <!--  Neumorphism Sample Template background below TabBar  -->
    <style name="CustomShapeAppearanceTabBarBottom">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>

        <!-- Or if wants different radius depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">0dp</item>
        <item name="neumorph_cornerSizeTopRight">0dp</item>
        <item name="neumorph_cornerSizeBottomLeft">12dp</item>
        <item name="neumorph_cornerSizeBottomRight">12dp</item>
    </style>

</resources>