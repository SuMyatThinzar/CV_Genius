<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CVGenius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorAccent</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.CVGeniusSplash" parent="Theme.CVGenius">
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="Theme.CVGenius.TransparentStatusBar" parent="Theme.CVGenius">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <!-- Disable automatic color adaptation -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>